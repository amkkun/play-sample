# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /info                       controllers.Application.info(page: Int ?= 0)
GET     /gallery                    controllers.Application.gallery
GET     /gallery/search             controllers.Application.search
GET     /gallery/tags/:tag          controllers.Application.tags(tag: String)
GET     /gallery/others             controllers.Application.others(page: Int ?= 0)
GET     /gallery/:t                 controllers.Application.timesGallery(t: andon.utils.OrdInt)
GET     /gallery/:t/:g/:c           controllers.Application.classGallery(t: andon.utils.OrdInt, g: Int, c: Int)
GET     /howto                      controllers.Application.howto
GET     /howto/all                  controllers.Application.allHowto
GET     /howto/:type/:genre         controllers.Application.category(type: String, genre: String)
GET     /about                      controllers.Application.about
GET     /contact                    controllers.Application.contact
GET     /article/search             controllers.Application.articleSearch(q: String, p: Option[Int])
GET     /article/:id                controllers.Application.article(id: Long)
GET     /article/history/:id        controllers.Application.history(id: Long)
GET     /article/diff/:id/:cid      controllers.Application.diff(id: Long, cid: String)
GET     /article/:id/:cid           controllers.Application.historyContent(id: Long, cid: String)
POST    /comment/:id                controllers.Application.postComment(id: Long)
GET     /comments                   controllers.Application.comments
POST    /comments/delete            controllers.Application.deleteComment(id: Long)
POST    /comments/edit              controllers.Application.editComment(id: Long)

# Artisan page
GET     /artisan/login              controllers.Artisan.login
POST    /artisan/login              controllers.Artisan.authenticate
GET     /artisan/logout             controllers.Artisan.logout
GET     /artisan/home               controllers.Artisan.home
GET     /artisan/my-account         controllers.Artisan.myAccount
GET     /artisan/articles           controllers.Artisan.articles
GET     /artisan/article            controllers.Artisan.article(id: Long)
GET     /artisan/article/create     controllers.Artisan.createArticle
POST    /artisan/article/create     controllers.Artisan.postCreateArticle
GET     /artisan/article/edit       controllers.Artisan.editArticle(id: Long)
POST    /artisan/article/edit       controllers.Artisan.postEditArticle(id: Long)
POST    /artisan/article/preview    controllers.Artisan.preview
POST    /artisan/article/delete     controllers.Artisan.deleteArticle(id: Long)
GET     /artisan/article/history/:id      controllers.Artisan.history(id: Long)
GET     /artisan/article/:id/content/:cid controllers.Artisan.historyContent(id: Long, cid: String)
GET     /artisan/article/:id/source/:cid  controllers.Artisan.historySource(id: Long, cid: String)
GET     /artisan/article/:id/diff/:cid    controllers.Artisan.diff(id: Long, cid: String)
GET     /artisan/accounts           controllers.Artisan.accounts
GET     /artisan/account            controllers.Artisan.account(id: Int)
GET     /artisan/account/create     controllers.Artisan.createAccount
POST    /artisan/account/create     controllers.Artisan.postCreateAccount
GET     /artisan/account/edit       controllers.Artisan.editAccount(id: Int)
POST    /artisan/account/edit       controllers.Artisan.postEditAccount(id: Int)
GET     /artisan/account/password   controllers.Artisan.editPassword(id: Int)
POST    /artisan/account/password   controllers.Artisan.postEditPassword(id: Int)
POST    /artisan/account/delete     controllers.Artisan.deleteAccount(id: Int)
GET     /artisan/password           controllers.Artisan.editMyPassword
POST    /artisan/password           controllers.Artisan.postEditMyPassword
POST    /artisan/delete             controllers.Artisan.deleteMyAccount
GET     /artisan/data               controllers.Artisan.data
GET     /artisan/data/upload        controllers.Artisan.uploadDatum
POST    /artisan/data/upload        controllers.Artisan.postUploadDatum
GET     /artisan/data/edit          controllers.Artisan.editDatum(id: Int)
POST    /artisan/data/edit          controllers.Artisan.postEditDatum(id: Int)
POST    /artisan/data/delete        controllers.Artisan.deleteDatum(id: Int)
GET     /artisan/classdata          controllers.Artisan.classData(times: Option[Int])
GET     /artisan/classdata/edit     controllers.Artisan.editClassData(id: Int)
POST    /artisan/classdata/edit     controllers.Artisan.postEditClassData(id: Int)
GET     /artisan/classdata/tags     controllers.Artisan.editTags(id: Int)
POST    /artisan/classdata/tags     controllers.Artisan.postEditTags(id: Int)
GET     /artisan/classdata/review   controllers.Artisan.editReview(id: Int)
POST    /artisan/classdata/review   controllers.Artisan.postEditReview(id: Int)
GET     /artisan/classdata/create   controllers.Artisan.createClass
POST    /artisan/classdata/create   controllers.Artisan.postCreateClass
GET     /artisan/gallery/upload     controllers.Artisan.uploadImage(id: Int)
POST    /artisan/gallery/upload     controllers.Artisan.postUploadImage(id: Int)
GET     /artisan/gallery/select     controllers.Artisan.selectTop(id: Int)
POST    /artisan/gallery/select     controllers.Artisan.postSelectTop(id: Int)
GET     /artisan/gallery/delete     controllers.Artisan.deleteImage(id: Int)
POST    /artisan/gallery/delete     controllers.Artisan.postDeleteImage(id: Int)
GET     /artisan/timesdata          controllers.Artisan.timesData
GET     /artisan/timesdata/edit     controllers.Artisan.editTimesData(id: Int)
POST    /artisan/timesdata/edit     controllers.Artisan.postEditTimesData(id: Int)
GET     /artisan/timesdata/create   controllers.Artisan.createTimes
POST    /artisan/timesdata/create   controllers.Artisan.postCreateTimes
GET     /artisan/gallery/others/upload controllers.Artisan.uploadOtherImages
POST    /artisan/gallery/others/upload controllers.Artisan.postUploadOtherImages

